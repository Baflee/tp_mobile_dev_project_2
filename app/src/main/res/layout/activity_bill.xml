<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtRider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rider: Raccoon lover club"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtBillAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: $100"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtBillDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date: 2023-12-01"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtBillOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin: 123 Start Street"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtBillDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination: 456 End Avenue"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txtBillDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 12.5 km"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>